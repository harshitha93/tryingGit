<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/tool_bar"
        android:id="@+id/toolbar2"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/cv1"
                app:cardElevation="10dp"
                android:layout_margin="5dp"
                >

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/req_array1"
                    android:prompt="@string/req_prompt1"
                    >
                </Spinner>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/requesttext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="15sp"
                android:textColor="#000"
                android:padding="5dp"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_edit"
                android:id="@+id/requestimage1"
                android:layout_alignRight="@+id/requesttext1"/>

            <TextView
                android:id="@+id/requesttext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reqtext1"
                android:textSize="15sp"
                android:textColor="#000"
                android:padding="5dp"
                android:layout_below="@+id/requesttext1"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/searchtv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/searchtext4"
                android:textColor="#000"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_margin="5dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/cv4"
                app:cardElevation="10dp"
                android:layout_margin="10dp"
                >

                <Spinner
                    android:id="@+id/spinner4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/exp_array"
                    android:prompt="@string/exp_prompt"
                    >

                </Spinner>
            </android.support.v7.widget.CardView>

</LinearLayout>

            <LinearLayout
                android:id="@+id/lin6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/searchtv6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/searchtext6"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/cv6"
                    app:cardElevation="10dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    >
                    <Spinner
                        android:id="@+id/spinner6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/salary_array1"
                        android:prompt="@string/salary_prompt1"
                        >
                    </Spinner>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/cv7"
                    app:cardElevation="10dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"

                    >
                    <Spinner
                        android:id="@+id/spinner7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/salary_array2"
                        android:prompt="@string/salary_prompt2"
                        >

                    </Spinner>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filtertv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filtertext1"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/fcv1"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp"
                    >

                    <Spinner
                        android:id="@+id/sp1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/location_array"
                        android:prompt="@string/location_prompt"
                        >
                    </Spinner>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/locationlinear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/locationtv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/locationtext2"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/lcv1"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp"
                    >

                    <Spinner
                        android:id="@+id/locationspinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/position_array"
                        android:prompt="@string/position_prompt"
                        >
                    </Spinner>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        <RelativeLayout
            android:id="@+id/locationrelative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/datebutton">
                <EditText
                    android:id="@+id/textDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Target Date"
                    android:editable="false"
                    />
            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/datebutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_date"
                android:layout_margin="2dp"
                android:layout_alignParentRight="true"

                />


        </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/requesttv5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reqtext2"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:textSize="15sp"
                     />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/cv5"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp"
                    >

                    <Spinner
                        android:id="@+id/spinner5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/req_array2"
                        android:prompt="@string/req_prompt2"
                        >

                    </Spinner>
                </android.support.v7.widget.CardView>
</LinearLayout>
                <Button
                    android:id="@+id/requestbutton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create job request"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/PrimaryDarkColor"/>





        </LinearLayout>
    </ScrollView>

</LinearLayout>